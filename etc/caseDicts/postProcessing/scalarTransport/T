Tinlet          1;

dimensions      [0 0 0 0 0 0 0];  // T can represent any scalar
                                  // with any dimensional units
internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $Tinlet;
    }

    ".*"
    {
        type            zeroGradient;
    }

    #includeEtc "caseDicts/setConstraintTypes"
}

