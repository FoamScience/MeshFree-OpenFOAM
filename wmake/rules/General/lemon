SUFFIXES += .ly .lyy

lytoo = $E $(call QUIET_MESSAGE,lemon,$(<F)) \
    $(WM_SCHEDULER) $(WM_SCRIPTS)/wrap-lemon -d$(@D) $< $(AND) \
    $(cc) $(cFLAGS) -c $(@D)/$(*F).c -o $@

lyytoo = $E $(call QUIET_MESSAGE,lemon,$(<F)) \
    $(WM_SCHEDULER) $(WM_SCRIPTS)/wrap-lemon -d$(@D) -ecc $< $(AND) \
    $(CC) $(c++FLAGS) -c $(@D)/$(*F).cc -o $@
